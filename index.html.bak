            font-size: 14px;
            color: #2c3e50;
            background: none;
            border: none;
            border-bottom: 2px solid transparent;
            cursor: pointer;
            transition: all 0.2s ease;
            flex: 1;
            text-align: center;
        }
        .floor-tab:hover {
            color: #007bff;
        }
        .floor-tab.active {
            color: #007bff;
            border-bottom: 2px solid #007bff;
        }
        .room-list {
            width: 100%;
            max-height: 250px;
            overflow-y: auto;
            display: none;
        }
        .room-list.active {
            display: block;
        }
        .room-item {
            padding: 6px 10px;
            margin: 2px 0;
            font-size: 12px;
            color: #333;
            background: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 3px;
            cursor: pointer;
            transition: all 0.2s ease;
        }
        .room-item:hover {
            background: #e9ecef;
            border-color: #007bff;
        }
        .room-list::-webkit-scrollbar {
            width: 6px;
        }
        .room-list::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 3px;
        }
        .room-list::-webkit-scrollbar-thumb {
            background: #bbb;
            border-radius: 3px;
        }
